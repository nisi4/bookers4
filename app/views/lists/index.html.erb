<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show",book_show_path(book.id) %></td>
      <td><%= link_to "Edit",book_edit_path(book.id) %></td>
      <td><%= link_to "Destroy",book_destroy_path(book.id),method: :delete,"data-confirm" => "本当に削除しますか？" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>New Book</h2>
<div class="form">
  <%= form_with model: @book,url: books_path,method: :post do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %><br>
    
    <%= f.submit "Create Book" %>
  <% end %>
</div>
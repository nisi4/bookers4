<h1>Editing Book</h1>
<div class="form">
  <%= form_with model: @book,url: book_update_path(@book.id),method: :patch do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %><br>
    <%= f.submit "Update Book" %>
  <% end %>
</div>

<span class="link"><%= link_to "Show",book_show_path(@book.id) %></span> | <span><%= link_to "Back",books_path %></span>